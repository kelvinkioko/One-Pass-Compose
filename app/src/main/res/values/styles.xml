<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.OnePass">
        <item name="colorPrimaryDark">?attr/colorOnPrimary</item>
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ColoredButtonAppearance" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Rounded.Corners</item>
    </style>

    <style name="OutlinesButtonAppearance" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/brand_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@color/brand_color</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Rounded.Corners</item>
    </style>

    <style name="TextButtonAppearance" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Rounded.Corners</item>
    </style>

    <style name="InputOutline" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textAppearance">?attr/textAppearanceHeadline2</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Rounded.Corners</item>
    </style>

    <style name="SearchInputOutline" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="shapeAppearanceOverlay">@style/SearchAppearance.Rounded.Corners</item>
    </style>

    <style name="SearchAppearance.Rounded.Corners" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ShapeAppearance.Rounded.Corners" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!--This will be applied on any text described with 16sp, 24dp line height, main text color and Body1 appearance-->
    <style name="MainItemTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!--This will be applied on any text described with 14sp, 20dp line height, sub text color and Body1 appearance-->
    <style name="SubItemTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>
</resources>
